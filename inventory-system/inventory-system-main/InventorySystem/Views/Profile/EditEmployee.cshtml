@model InventorySystem.Models.Employee

@{
    ViewData["Title"] = "Edit Employee";
}

<!-- Include CSS files -->
<link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />

<div class="fade-in">
    <!-- Page Header with Go Back Icon -->
    <div class="d-flex align-items-center mb-4" style="width: 1000px; margin: 20px 0 0 26px;">
        <a asp-action="ProfilePage" class="text-decoration-none me-3 text-dark" title="Go Back">
            <i class="fa-solid fa-arrow-left fs-3"></i>
        </a>
        <h2 class="mb-0 fw-bold" style="font-size: 1.8rem; color: #343a40;">Edit Employee</h2>
    </div>

    <!-- Centered Form in a Card -->
    <div class="container d-flex justify-content-center" style="margin-bottom: 80px;">
        <div class="card shadow-sm p-4" style="width: 100%; max-width: 750px; border-radius: 12px; background-color: #ffffff;">
            <div class="card-body">
                <form asp-action="EditEmployee" method="post">
                    <!-- Hidden Employee ID -->
                    <input type="hidden" asp-for="Id" />

                    <!-- First Name -->
                    <div class="form-group mb-4">
                        <label for="FirstName" class="fw-semibold" style="font-size: 1.1rem; color: #555;">First Name</label>
                        <input type="text" class="form-control form-control-lg" id="FirstName" name="FirstName" value="@Model.FirstName" required>
                    </div>

                    <!-- Last Name -->
                    <div class="form-group mb-4">
                        <label for="LastName" class="fw-semibold" style="font-size: 1.1rem; color: #555;">Last Name</label>
                        <input type="text" class="form-control form-control-lg" id="LastName" name="LastName" value="@Model.LastName" required>
                    </div>

                    <!-- Email -->
                    <div class="form-group mb-4">
                        <label for="Email" class="fw-semibold" style="font-size: 1.1rem; color: #555;">Email</label>
                        <input type="email" class="form-control form-control-lg" id="Email" name="Email" value="@Model.Email" required>
                    </div>

                    <!-- Phone Number -->
                    <div class="form-group mb-4">
                        <label for="PhoneNumber" class="fw-semibold" style="font-size: 1.1rem; color: #555;">Phone Number</label>
                        <input type="text" class="form-control form-control-lg" id="PhoneNumber" name="PhoneNumber" value="@Model.PhoneNumber">
                    </div>

                    <!-- Address -->
                    <div class="form-group mb-4">
                        <label for="Address" class="fw-semibold" style="font-size: 1.1rem; color: #555;">Address</label>
                        <input type="text" class="form-control form-control-lg" id="Address" name="Address" value="@Model.Address">
                    </div>

                    <!-- Role -->
                    <div class="form-group mb-4">
                        <label for="Role" class="fw-semibold" style="font-size: 1.1rem; color: #555;">Role</label>
                        <input type="text" class="form-control form-control-lg" id="Role" name="Role" value="@Model.Role" required>
                    </div>

                    <!-- Password (Read-Only) -->
                    <div class="form-group mb-4">
                        <label for="Password" class="fw-semibold" style="font-size: 1.1rem; color: #555;">Current Password</label>
                        <div class="input-group">
                            <input type="password" class="form-control form-control-lg" id="Password" name="Password" value="@Model.Password" readonly>
                            <span class="input-group-text" id="showPassword" style="cursor: pointer;">
                                <i class="fa fa-eye" id="eyeIcon"></i>
                            </span>
                        </div>
                    </div>

                    <!-- Change Password Checkbox -->
                    <div class="form-group mb-4">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="ChangePassword" name="ChangePassword" />
                            <label class="form-check-label" for="ChangePassword">Change Password</label>
                        </div>
                    </div>

                    <!-- New Password Fields (Initially Hidden) -->
                    <div id="passwordFields" style="display: none;">
                        <!-- New Password -->
                        <div class="form-group mb-4">
                            <label for="NewPassword" class="fw-semibold" style="font-size: 1.1rem; color: #555;">New Password</label>
                            <div class="input-group">
                                <input type="password" class="form-control form-control-lg" id="Password" name="Password">
                                <span class="input-group-text" id="showNewPassword" style="cursor: pointer;">
                                    <i class="fa fa-eye" id="eyeIconNew"></i>
                                </span>
                            </div>
                        </div>

                        <!-- Confirm New Password -->
                        <div class="form-group mb-4">
                            <label for="ConfirmNewPassword" class="fw-semibold" style="font-size: 1.1rem; color: #555;">Confirm New Password</label>
                            <div class="input-group">
                                <input type="password" class="form-control form-control-lg" id="ConfirmNewPassword" name="ConfirmNewPassword">
                                <span class="input-group-text" id="showConfirmNewPassword" style="cursor: pointer;">
                                    <i class="fa fa-eye" id="eyeIconConfirmNew"></i>
                                </span>
                            </div>
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <div class="text-center">
                        <button type="submit" class="btn btn-success btn-lg px-5" style="border-radius: 25px; font-size: 1.1rem;">
                            <i class="fa-solid fa-check-circle me-2"></i> Save Changes
                        </button>
                    </div>

                    <!-- Cancel Button -->
                    <div class="text-center mt-3">
                        <a asp-action="ProfilePage" class="btn btn-secondary btn-lg px-5" style="border-radius: 25px; font-size: 1.1rem;">
                            <i class="fa-solid fa-times-circle me-2"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Fade-In Animation Script -->
<script>
    document.addEventListener('DOMContentLoaded', () => {
        // Fade-in animation
        const fadeInElements = document.querySelectorAll('.fade-in');
        fadeInElements.forEach(el => {
            el.style.opacity = 0;
            el.style.transform = 'translateY(10px)';
            setTimeout(() => {
                el.style.transition = 'opacity 0.8s ease-in-out, transform 0.8s ease-in-out';
                el.style.opacity = 1;
                el.style.transform = 'translateY(0)';
            }, 100);
        });

        // Current Password visibility toggle
        const eyeIcon = document.getElementById('eyeIcon');
        const passwordField = document.getElementById('Password');
        eyeIcon.addEventListener('click', () => {
            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                eyeIcon.classList.remove('fa-eye');
                eyeIcon.classList.add('fa-eye-slash');
            } else {
                passwordField.type = 'password';
                eyeIcon.classList.remove('fa-eye-slash');
                eyeIcon.classList.add('fa-eye');
            }
        });

        // New Password visibility toggle
        const eyeIconNew = document.getElementById('eyeIconNew');
        const newPasswordField = document.getElementById('NewPassword');
        eyeIconNew.addEventListener('click', () => {
            if (newPasswordField.type === 'password') {
                newPasswordField.type = 'text';
                eyeIconNew.classList.remove('fa-eye');
                eyeIconNew.classList.add('fa-eye-slash');
            } else {
                newPasswordField.type = 'password';
                eyeIconNew.classList.remove('fa-eye-slash');
                eyeIconNew.classList.add('fa-eye');
            }
        });

        // Confirm New Password visibility toggle
        const eyeIconConfirmNew = document.getElementById('eyeIconConfirmNew');
        const confirmNewPasswordField = document.getElementById('ConfirmNewPassword');
        eyeIconConfirmNew.addEventListener('click', () => {
            if (confirmNewPasswordField.type === 'password') {
                confirmNewPasswordField.type = 'text';
                eyeIconConfirmNew.classList.remove('fa-eye');
                eyeIconConfirmNew.classList.add('fa-eye-slash');
            } else {
                confirmNewPasswordField.type = 'password';
                eyeIconConfirmNew.classList.remove('fa-eye-slash');
                eyeIconConfirmNew.classList.add('fa-eye');
            }
        });

        // Handle "Change Password" checkbox logic
        const changePasswordCheckbox = document.getElementById('ChangePassword');
        const passwordFields = document.getElementById('passwordFields');
        changePasswordCheckbox.addEventListener('change', () => {
            if (!changePasswordCheckbox.checked) {
                passwordFields.style.display = 'none';
                document.getElementById('NewPassword').required = false;
                document.getElementById('ConfirmNewPassword').required = false;
                // Clear password fields when hiding
                document.getElementById('NewPassword').value = '';
                document.getElementById('ConfirmNewPassword').value = '';
            } else {
                passwordFields.style.display = 'block';
                document.getElementById('NewPassword').required = true;
                document.getElementById('ConfirmNewPassword').required = true;
            }
        });

        // Form submission validation for matching passwords
        const form = document.querySelector('form');
        form.addEventListener('submit', function(event) {
            if (changePasswordCheckbox.checked) {
                const newPassword = document.getElementById('NewPassword').value;
                const confirmPassword = document.getElementById('ConfirmNewPassword').value;

                if (newPassword !== confirmPassword) {
                    event.preventDefault(); // Prevent form submission
                    alert("Passwords do not match. Please ensure both passwords are the same.");
                }
            }
        });
    });
</script>

<!-- Custom Styling -->
<style>
    body {
        background-color: #f4f6f9;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .card {
        border: none;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-control:focus {
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        border-color: #80bdff;
    }

    .btn-success:hover {
        background-color: #218838;
        transform: translateY(-2px);
        transition: all 0.2s ease;
    }

    .input-group-text {
        background: none;
        border: none;
        cursor: pointer;
    }

    .fade-in {
        opacity: 0;
        transform: translateY(10px);
    }
</style>